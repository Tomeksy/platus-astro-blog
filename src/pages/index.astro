---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/common/SEO.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import BlogCard from '../components/blog/BlogCard.astro';
import ChatbotCTA from '../components/common/ChatbotCTA.astro';
import { getFeaturedPosts, getPaginatedBlogPosts } from '../utils/content';

// Get featured posts
const featuredPosts = await getFeaturedPosts(3);

// Meta information
const title = 'Hilfsmittel-Berater | Informationen zu Kommunikationshilfen';
const description = 'Informationsquelle für Menschen mit Kommunikationsbeeinträchtigungen und deren Betreuer. Erfahren Sie mehr über Hilfsmittel und Finanzierungsmöglichkeiten.';
---

<Layout>
  <SEO
    title={title}
    description={description}
  />
  
  <Header />
  
  <main class="pt-24 pb-16">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-primary-500 to-secondary-600 text-white py-16 md:py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl">
          <h1 class="text-3xl md:text-5xl font-heading font-medium mb-6">
            Hilfsmittel für bessere Kommunikation
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-white/90 leading-relaxed">
            Informationen und Beratung zu Kommunikationshilfen für Menschen mit Beeinträchtigungen und deren Betreuer.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href="/blog" 
              class="inline-flex items-center justify-center px-6 py-3 bg-white text-primary-700 font-medium rounded-md shadow-md hover:bg-gray-100 transition-colors"
            >
              Zum Blog
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a 
              href={import.meta.env.PUBLIC_CHATBOT_URL}
              class="inline-flex items-center justify-center px-6 py-3 bg-accent-500 text-white font-medium rounded-md shadow-md hover:bg-accent-600 transition-colors"
              target="_blank"
              rel="noopener"
            >
              Mit Chatbot sprechen
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Who We Are Section -->
    <section class="py-16 md:py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <div class="mb-4">
              <span class="bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-medium">
                Über uns
              </span>
            </div>
            <h2 class="text-3xl md:text-4xl font-heading font-medium mb-6">
              Wer wir sind
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              Wir sind Ihr vertrauensvoller Partner für Kommunikationshilfen und unterstützte Kommunikation in Österreich.
            </p>
          </div>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium mb-2">Spezialisierte Expertise</h3>
                    <p class="text-gray-600">
                      Als Teil von Platus verfügen wir über jahrelange Erfahrung in der Beratung und Unterstützung von Menschen mit Kommunikationsbeeinträchtigungen.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-secondary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium mb-2">Umfassende Betreuung</h3>
                    <p class="text-gray-600">
                      Von der ersten Beratung bis zur Finanzierung begleiten wir Sie durch den gesamten Prozess der Hilfsmittelversorgung.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium mb-2">Vertrauenswürdig & Zuverlässig</h3>
                    <p class="text-gray-600">
                      Hunderte von Familien vertrauen bereits auf unsere Expertise und professionelle Unterstützung bei der Auswahl der richtigen Kommunikationshilfen.
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="relative">
              <div class="rounded-2xl overflow-hidden shadow-2xl">
                <img 
                  src="https://images.pexels.com/photos/7176026/pexels-photo-7176026.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                  alt="Professionelle Beratung zu Kommunikationshilfen" 
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="absolute -bottom-6 -right-6 bg-white rounded-xl p-6 shadow-lg max-w-xs">
                <div class="flex items-center space-x-3">
                  <div class="w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-gray-900">500+</div>
                    <div class="text-sm text-gray-600">Zufriedene Kunden</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Work With Us Section -->
    <section class="py-16 md:py-20 bg-gradient-to-br from-gray-50 to-primary-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <div class="mb-4">
              <span class="bg-accent-100 text-accent-800 px-4 py-2 rounded-full text-sm font-medium">
                Unsere Vorteile
              </span>
            </div>
            <h2 class="text-3xl md:text-4xl font-heading font-medium mb-6">
              Warum mit uns arbeiten?
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              Wir bieten Ihnen einzigartige Vorteile, die den Unterschied machen.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Advantage 1 -->
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-medium mb-4">Sofortige Hilfe</h3>
              <p class="text-gray-600 leading-relaxed">
                Unser 24/7 Chatbot gibt Ihnen sofortige Antworten auf alle Fragen zu Hilfsmitteln und Finanzierung - ohne Wartezeiten.
              </p>
            </div>
            
            <!-- Advantage 2 -->
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-secondary-500 to-secondary-600 rounded-2xl flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-medium mb-4">Kostenlose Beratung</h3>
              <p class="text-gray-600 leading-relaxed">
                Alle unsere Beratungsleistungen sind für Sie völlig kostenfrei - von der ersten Information bis zur erfolgreichen Hilfsmittelversorgung.
              </p>
            </div>
            
            <!-- Advantage 3 -->
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-2xl flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-xl font-medium mb-4">Schnelle Umsetzung</h3>
              <p class="text-gray-600 leading-relaxed">
                Dank unserer Erfahrung und etablierten Prozesse verkürzen wir die Zeit von der Beratung bis zur Hilfsmittelversorgung erheblich.
              </p>
            </div>
            
            <!-- Advantage 4 -->
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-success-500 to-success-600 rounded-2xl flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <h3 class="text-xl font-medium mb-4">Individuelle Lösungen</h3>
              <p class="text-gray-600 leading-relaxed">
                Jeder Mensch ist einzigartig. Wir finden die perfekte Kommunikationslösung, die genau zu Ihren Bedürfnissen und Ihrer Lebenssituation passt.
              </p>
            </div>
            
            <!-- Advantage 5 -->
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-warning-500 to-warning-600 rounded-2xl flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="text-xl font-medium mb-4">Umfassendes Wissen</h3>
              <p class="text-gray-600 leading-relaxed">
                Unser Expertenwissen deckt alle Bereiche ab: von einfachen Kommunikationstafeln bis zu hochmodernen Augensteuerungssystemen.
              </p>
            </div>
            
            <!-- Advantage 6 -->
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-error-500 to-error-600 rounded-2xl flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-medium mb-4">Langfristige Betreuung</h3>
              <p class="text-gray-600 leading-relaxed">
                Auch nach der Hilfsmittelversorgung stehen wir Ihnen zur Seite - für Schulungen, Updates und bei allen weiteren Fragen.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What Our Clients Say Section -->
    <section class="py-16 md:py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <div class="mb-4">
              <span class="bg-secondary-100 text-secondary-800 px-4 py-2 rounded-full text-sm font-medium">
                Kundenstimmen
              </span>
            </div>
            <h2 class="text-3xl md:text-4xl font-heading font-medium mb-6">
              Was unsere Kunden sagen
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              Erfahren Sie, wie wir anderen Familien geholfen haben, die richtige Kommunikationslösung zu finden.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Testimonial 1 -->
            <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8 relative">
              <div class="absolute top-6 right-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
                </svg>
              </div>
              <div class="mb-6">
                <p class="text-gray-700 leading-relaxed">
                  "Der Chatbot hat uns sofort geholfen, die richtigen Informationen zu finden. Innerhalb von wenigen Wochen hatte unser Sohn sein erstes Kommunikationsgerät - völlig kostenfrei über die Krankenkasse."
                </p>
              </div>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-primary-200 rounded-full flex items-center justify-center mr-4">
                  <span class="text-primary-700 font-medium">MH</span>
                </div>
                <div>
                  <div class="font-medium text-gray-900">Maria H.</div>
                  <div class="text-sm text-gray-600">Mutter von Leon (8 Jahre)</div>
                </div>
              </div>
            </div>
            
            <!-- Testimonial 2 -->
            <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 rounded-2xl p-8 relative">
              <div class="absolute top-6 right-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-secondary-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
                </svg>
              </div>
              <div class="mb-6">
                <p class="text-gray-700 leading-relaxed">
                  "Nach meinem Schlaganfall war ich verzweifelt. Die Beratung war so einfühlsam und professionell. Heute kann ich dank der Augensteuerung wieder mit meiner Familie kommunizieren."
                </p>
              </div>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-secondary-200 rounded-full flex items-center justify-center mr-4">
                  <span class="text-secondary-700 font-medium">RK</span>
                </div>
                <div>
                  <div class="font-medium text-gray-900">Robert K.</div>
                  <div class="text-sm text-gray-600">Patient nach Schlaganfall</div>
                </div>
              </div>
            </div>
            
            <!-- Testimonial 3 -->
            <div class="bg-gradient-to-br from-accent-50 to-accent-100 rounded-2xl p-8 relative">
              <div class="absolute top-6 right-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
                </svg>
              </div>
              <div class="mb-6">
                <p class="text-gray-700 leading-relaxed">
                  "Als Logopädin empfehle ich den Hilfsmittel-Berater regelmäßig weiter. Die Informationen sind immer aktuell und die Unterstützung bei der Antragstellung ist unbezahlbar."
                </p>
              </div>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-accent-200 rounded-full flex items-center justify-center mr-4">
                  <span class="text-accent-700 font-medium">AS</span>
                </div>
                <div>
                  <div class="font-medium text-gray-900">Anna S.</div>
                  <div class="text-sm text-gray-600">Logopädin</div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Trust indicators -->
          <div class="mt-12 pt-8 border-t border-gray-100">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
              <div>
                <div class="text-3xl font-bold text-primary-600 mb-2">500+</div>
                <div class="text-sm text-gray-600">Zufriedene Kunden</div>
              </div>
              <div>
                <div class="text-3xl font-bold text-secondary-600 mb-2">98%</div>
                <div class="text-sm text-gray-600">Erfolgreiche Anträge</div>
              </div>
              <div>
                <div class="text-3xl font-bold text-accent-600 mb-2">24/7</div>
                <div class="text-sm text-gray-600">Chatbot verfügbar</div>
              </div>
              <div>
                <div class="text-3xl font-bold text-success-600 mb-2">15+</div>
                <div class="text-sm text-gray-600">Jahre Erfahrung</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Posts Section -->
    {featuredPosts.length > 0 && (
      <section class="py-16 bg-gradient-to-br from-gray-50 to-primary-50">
        <div class="container mx-auto px-4">
          <div class="text-center mb-12">
            <div class="mb-4">
              <span class="bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-medium">
                Empfohlene Artikel
              </span>
            </div>
            <h2 class="text-3xl md:text-4xl font-heading font-medium mb-6">Hilfreiche Informationen</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              Entdecken Sie unsere wichtigsten Artikel zu Kommunikationshilfen und Finanzierungsmöglichkeiten.
            </p>
          </div>
          
          <div class="grid grid-cols-1 gap-8 max-w-4xl mx-auto">
            {featuredPosts.map((post, index) => (
              <BlogCard post={post} featured={true} />
            ))}
          </div>
          
          <div class="text-center mt-8">
            <a 
              href="/blog" 
              class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-md shadow-md transition-colors"
            >
              Alle Artikel ansehen
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </section>
    )}
    
    <!-- Funding Information Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16 items-center">
          <!-- Image -->
          <div class="rounded-xl overflow-hidden shadow-lg order-2 md:order-1">
            <img 
              src="https://images.pexels.com/photos/7176026/pexels-photo-7176026.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
              alt="Person reviewing documents" 
              class="w-full h-full object-cover"
            />
          </div>
          
          <!-- Funding Info -->
