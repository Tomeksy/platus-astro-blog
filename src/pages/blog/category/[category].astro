---
import Layout from '../../../layouts/Layout.astro';
import SEO from '../../../components/common/SEO.astro';
import Header from '../../../components/common/Header.astro';
import Footer from '../../../components/common/Footer.astro';
import BlogCard from '../../../components/blog/BlogCard.astro';
import Pagination from '../../../components/blog/Pagination.astro';
import CategoryList from '../../../components/blog/CategoryList.astro';
import TagCloud from '../../../components/blog/TagCloud.astro';
import ChatbotCTA from '../../../components/common/ChatbotCTA.astro';
import { getPaginatedBlogPosts, getAllCategories, getAllTags } from '../../../utils/content';
import { slugify } from '../../../utils/helpers';

// Get URL parameters
const { category } = Astro.params;
const { page } = Astro.url.searchParams || {};
const currentPage = page ? parseInt(page.toString()) : 1;

// Get all categories to find the proper name
const allCategories = await getAllCategories();
const categoryInfo = allCategories.find(cat => slugify(cat.name) === category);

if (!categoryInfo) {
  return Astro.redirect('/404');
}

// Get posts with pagination for this category
const { posts, pagination } = await getPaginatedBlogPosts(currentPage, 9, categoryInfo.name);

// Get tags for sidebar
const tags = await getAllTags();

// Meta information
const title = `${categoryInfo.name} | Hilfsmittel-Berater Blog`;
const description = `Lesen Sie informative Artikel über ${categoryInfo.name} für Menschen mit Kommunikationsbeeinträchtigungen und deren Betreuer.`;
---

<Layout>
  <SEO
    title={title}
    description={description}
  />
  
  <Header />
  
  <main class="pt-24 pb-16">
    <!-- Category Header -->
    <section class="bg-gradient-to-r from-primary-500 to-secondary-600 text-white py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl">
          <div class="mb-4">
            <a href="/blog" class="inline-flex items-center text-white/80 hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Zurück zum Blog
            </a>
          </div>
          <h1 class="text-3xl md:text-4xl font-heading font-medium mb-4">
            {categoryInfo.name}
          </h1>
          <p class="text-lg md:text-xl text-white/90 leading-relaxed">
            {categoryInfo.count} {categoryInfo.count === 1 ? 'Artikel' : 'Artikel'} in dieser Kategorie
          </p>
        </div>
      </div>
    </section>
    
    <!-- Blog Content -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Blog Posts -->
          <div class="lg:col-span-2">
            {posts.length > 0 ? (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {posts.map((post, index) => (
                  <BlogCard post={post} featured={index === 0 && currentPage === 1} />
                ))}
              </div>
            ) : (
              <div class="bg-white rounded-xl shadow-md p-8 text-center">
                <h2 class="text-xl font-medium mb-4">Keine Beiträge gefunden</h2>
                <p class="text-gray-600 mb-6">
                  Zurzeit sind keine Beiträge in dieser Kategorie verfügbar. Bitte versuchen Sie es später noch einmal oder wählen Sie eine andere Kategorie.
                </p>
                <a href="/blog" class="text-primary-600 hover:text-primary-800 font-medium">
                  Zurück zur Blogübersicht
                </a>
              </div>
            )}
            
            <!-- Pagination -->
            {posts.length > 0 && (
              <Pagination 
                pagination={pagination} 
                basePath="/blog" 
                category={category} 
              />
            )}
          </div>
          
          <!-- Sidebar -->
          <div class="space-y-8">
            <!-- Categories Widget -->
            <CategoryList categories={allCategories} currentCategory={category} />
            
            <!-- Tags Widget -->
            <TagCloud tags={tags} />
            
            <!-- CTA Widget -->
            <ChatbotCTA />
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>