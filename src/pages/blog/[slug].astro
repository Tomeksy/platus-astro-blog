---
import Layout from '../../layouts/Layout.astro';
import BlogPostLayout from '../../layouts/BlogPostLayout.astro';
import { getAllBlogPosts, getRelatedPosts } from '../../utils/content';

export async function getStaticPaths() {
  const posts = await getAllBlogPosts();
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

// Get the post from props
const { post } = Astro.props;

// Get related posts - now correctly accessing categories and tags from post.data
const relatedPosts = await getRelatedPosts(post.id, post.data.categories, post.data.tags, 3);
---

<BlogPostLayout post={post} relatedPosts={relatedPosts} />