---
import '../styles/global.css';
import ErrorBoundary from '../components/common/ErrorBoundary.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || 'Hilfsmittel-Berater'}</title>

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Lexend:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-50 min-h-screen">
    <ErrorBoundary className="fixed top-4 right-4 z-50 hidden" />
    <slot />
  </body>
</html>